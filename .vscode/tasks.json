    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", 
                "-ansi",
                "-pedantic",
                "-Wall",
                "-o",
                "carboard",
                "carboard.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}